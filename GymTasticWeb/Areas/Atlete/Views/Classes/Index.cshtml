@using GymTastic.Models.Models
@if (User.IsInRole("Atlete"))
{
    <div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-md-6">
                <h2 class="text-primary">Lista de Aulas</h2>
            </div>
        </div>
        <div class="table-responsive">
            <table id="tblData" class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Nome da Aula</th>
                        <th>Dia</th>
                        <th>Email</th>
                        <th>Especialidade</th>
                        <th>Máximo Atletas</th>
                        <th>Atletas Inscritos</th>
                        <th>Ações</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

    @section Scripts {
        <script src="~/js/classesatlete.js"></script>
    }
}
