@using GymTastic.Models.Models
@if (User.IsInRole("Trainer"))
{
    <div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-md-6">
                <h2 class="text-primary">Lista de Aulas</h2>
            </div>
            <div class="col-md-6 text-end mb-2">
                <a asp-controller="Classes" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Adicionar Aula
                </a>
            </div>
        </div>

        <table id="tblData" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Nome da Aula</th>
                    <th>Dia</th>
                    <th>Email</th>
                    <th>Especialidade</th>
                    <th>Máximo de Atletas</th>
                    <th>Ações</th>
                </tr>
            </thead>
        </table>
    </div>
    @section Scripts {
        <script src="~/js/classestrainer.js"></script>
    }
}