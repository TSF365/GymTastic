@model GymTastic.Models.Models.Preferences

@if (User.IsInRole("Admin"))
{
    ViewData["Title"] = "Apagar Preferência";

    <form asp-action="DeletePreference" method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-danger">Tem certeza que quer apagar esta preferência?</h2>
                <hr />
            </div>

            <input type="hidden" asp-for="Id" />

            <div class="mb-3 row p-1">
                <label asp-for="Name" class="p-0 fw-bold"></label>
                <input asp-for="Name" class="form-control" disabled />
            </div>

            <div class="row">
                <div class="col-6 col-md-3 p-1">
                    <button type="submit" class="btn btn-danger form-control">Apagar</button>
                </div>
                <div class="col-6 col-md-3 p-1">
                    <a asp-action="Preferences" class="btn btn-outline-secondary form-control">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
}
