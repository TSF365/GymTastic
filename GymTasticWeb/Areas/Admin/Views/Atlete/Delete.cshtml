@model Atlete

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Apagar Atleta</h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3 row p-1">
            <label asp-for="FullName" class="p-0"></label>
            <input asp-for="FullName" disabled class="form-control" />

        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Email" class="p-0"></label>
            <input asp-for="Email" disabled class="form-control" />

        </div>

        @* <div class="mb-3 row p-1">
            <label asp-for="Description" class="p-0"></label>
            <input asp-for="Description" disabled type="text" class="form-control" />

        </div> *@
        <div class="row ">
            <div class="col-6 col-md-3 p-1">
                <button type="submit" class="btn btn-danger form-control">Apagar</button>
            </div>
            <div class="col-6 col-md-3 p-1">
                <a asp-controller="Atlete" asp-action="Index" class="btn btn-outline-secondary form-control">
                    Voltar
                </a>
            </div>
        </div>


    </div>
</form>