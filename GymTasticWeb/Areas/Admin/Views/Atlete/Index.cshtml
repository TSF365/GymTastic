@if (User.IsInRole("Admin"))
{
    <div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-md-6">
                <h2 class="text-primary">Lista de Atletas</h2>
            </div>
            <div class="col-md-6 text-end mb-2">
                <a asp-controller="Atlete" asp-action="Create" class="btn btn-primary me-2">
                    <i class="bi bi-plus-circle"></i> Adicionar Atleta
                </a>
                <a asp-controller="Atlete" asp-action="Preferences" class="btn btn-secondary">
                    <i class="bi bi-list-ul"></i> Preferências
                </a>
            </div>
        </div>

        <div class="table-responsive">
            <table id="tblData" class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Nome do Atleta</th>
                        <th>Ano</th>
                        <th>Telefone</th>
                        <th>Email</th>
                        <th>Inscrição</th>
                        <th>Ações</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

    @section Scripts {
        <script src="~/js/atlete.js"></script>
    }
}
