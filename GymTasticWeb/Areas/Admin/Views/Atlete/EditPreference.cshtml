@model GymTastic.Models.Models.Preferences

@if (User.IsInRole("Admin"))
{
    ViewData["Title"] = "Editar Preferência";

    <form asp-action="EditPreference" method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Editar Preferência</h2>
                <hr />
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="mb-3 row p-1">
                <label asp-for="Name" class="p-0"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-6 col-md-3 p-1">
                    <button type="submit" class="btn btn-success form-control">Guardar</button>
                </div>
                <div class="col-6 col-md-3 p-1">
                    <a asp-action="Index" class="btn btn-outline-secondary form-control">Voltar</a>
                </div>
            </div>
        </div>
    </form>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
}
