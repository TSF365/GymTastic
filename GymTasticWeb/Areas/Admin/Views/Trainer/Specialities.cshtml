@if (User.IsInRole("Admin"))

    {
        ViewData["Title"] = "Especialidades";
    }

    <div class="container">
    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show position-fixed top-0 end-0 m-4 shadow" role="alert" style="z-index: 1050;">
            @TempData["error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
        </div>
    }
    @if (TempData["success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show position-fixed top-0 end-0 m-4 shadow" role="alert" style="z-index: 1050;">
            @TempData["success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
        </div>
    }
        <div class="row pt-4 pb-3">
            <div class="col-md-6">
                <h2 class="text-primary">Especialidades</h2>
            </div>
            <div class="col-md-6 text-end">
                <a asp-action="CreateSpeciality" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Nova Especialidade
                </a>
            </div>
        </div>
    <div class="table-responsive">
            <table id="tblSpecialities" class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Ações</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
    @section Scripts {
    <script src="~/js/specialities.js"></script>
}
