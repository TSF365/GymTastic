@model GymTastic.Models.Models.Speciality
@if (User.IsInRole("Admin"))
{
    <form asp-action="DeleteSpecialityPost" method="post">
        <input asp-for="Id" hidden />
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-danger">Apagar Especialidade</h2>
                <hr />
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3 row p-1">
                <label asp-for="Name" class="p-0"></label>
                <input asp-for="Name" disabled class="form-control" />
            </div>

            <div class="row">
                <div class="col-6 col-md-3 p-1">
                    <button type="submit" class="btn btn-danger form-control">Apagar</button>
                </div>
                <div class="col-6 col-md-3 p-1">
                    <a asp-controller="Trainer" asp-action="Specialities" class="btn btn-outline-secondary form-control">
                        Voltar
                    </a>
                </div>
            </div>
        </div>
    </form>
}
