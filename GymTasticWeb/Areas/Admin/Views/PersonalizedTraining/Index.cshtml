@using GymTastic.Models.Models
@if (User.IsInRole("Admin"))
{
    <div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-md-6">
                <h2 class="text-primary">Lista de Aulas</h2>
            </div>
            <div class="col-md-6 text-end mb-2">
                <a asp-controller="PersonalizedTraining" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Adicionar Treino
                </a>
            </div>
        </div>
        <div class="table-responsive">
            <table id="tblData" class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Nome do Treino</th>
                        <th>Atleta</th>
                        <th>Treinador</th>
                        <th>Objetivo</th>
                        <th>Email Treinador</th>
                        <th>Ações</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
    @section Scripts {
        <script src="~/js/ptraining.js"></script>
    }
}